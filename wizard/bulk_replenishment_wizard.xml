<odoo>
  <record id="view_bulk_replenishment_wizard" model="ir.ui.view">
    <field name="name">bulk.replenishment.wizard.form</field>
    <field name="model">bulk.replenishment.wizard</field>
    <field name="arch" type="xml">
      <form string="Bulk Inventory Replenishment">
        <field name="step" invisible="1"/>

        <div attrs="{'invisible': [('step', '=', 'review')]}">
          <div class="o_form_full_width">
            <field name="file" filename="filename"/>
            <field name="filename"/>
          </div>
        </div>

        <div attrs="{'invisible': [('step', '=', 'upload')]}">
          <div class="o_form_full_width">
            <field name="line_ids">
              <tree editable="bottom">
                <field name="product_id" readonly="1" />
                <field name="quantity"/>
              </tree>
            </field>
          </div>
        </div>

        <footer>
          <button string="Import CSV" type="object" name="action_import_csv" class="btn-primary" attrs="{'invisible': [('step', '=', 'review')]}" />
          <button string="Process Replenishment" type="object" name="action_process_lines" class="btn-primary" attrs="{'invisible': [('step', '=', 'upload')]}" />
          <button string="Cancel" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_bulk_replenishment_wizard" model="ir.actions.act_window">
    <field name="name">Bulk Replenishment</field>
    <field name="res_model">bulk.replenishment.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

  <menuitem id="menu_bulk_replenishment_root"
            name="Bulk Replenishment"
            parent="stock.menu_stock_inventory_control"
            action="action_bulk_replenishment_wizard"
            sequence="150" />
</odoo>
